<body>
    <div class="container"></div>
    <div class="row"></div>
    
    <form class="mb-3"action="/editar_venda/edit/{{venda.codVenda}}" method="post">
    <div class="card">
        <div class="formFile">
           <h2 class="title>">Editar Registro de Venda:</h2>
        </div>
                        <div class="form-label">
                        <label for="nome">Codigo de Venda: </label>
                        <input type="number" class="form-control" name="codVenda" id="codVenda" readonly="true" value={{venda.codVenda}}>
                        </div>

                        <div class="form-label">
                        <label for="nome">Codigo de Produto: </label>
                        <input type="number" class="form-control" name="codProduto" id="codProduto" readonly="true" value={{venda.codProduto}}>
                        </div>

                        <div class="form-label">
                        <label for="nome">Nome: </label>
                        <input type="text" class="form-control" name="nome" id="nome" value={{venda.nome}}>
                        </div>

                        <div class="form-label">
                        <label for="marca">Quantidade Vendida Atual: </label>
                        <input type="text" class="form-control" name="quant" id="quant" value={{venda.quantidadeVendida}}>
                        </div>

                        <div class="form-label">
                        <label for="marca">Quantidade Vendida Nova: </label>
                        <input type="text" class="form-control" name="quantNova" id="quantNova" value="">
                        </div>

                        <div class="form-label">
                        <label for="setor">Forma de Pagamento: </label>
                        <input type="text" class="form-control" name="formapag" id="formapag" value={{venda.Forma_Pag}}>
                        </div>

                        <div class="form-label">
                        <label for="precoDeCompra">Pre√ßo de Venda(Unid): </label>
                        <input type="text" class="form-control" name="prevenda" id="precoDeVenda" value={{venda.preco_unid}}>
                        </div>

                         <div class="form-label">
                        <label for="precoDeCompra">Total: </label>
                        <input type="text" class="form-control" name="total" id="totalVenda" value={{venda.total}}>
                        </div>

                        

